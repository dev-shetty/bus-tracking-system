{
  "name": "@bus-tracking-system/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build:all": "nx run-many --target=build --all",
    "build:backend": "nx build api",
    "build:institution": "nx build institution-portal",
    "build:government": "nx build government-portal",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "start:dev:api": "nx serve api",
    "start:dev:institution": "nx serve institution-portal",
    "start:dev:government": "nx serve government-portal",
    "start:dev:all": "nx run-many --target=serve --projects=api,institution-portal,government-portal --parallel=true",
    "build:dev": "nx run-many --target=build --projects=api,institution-portal,government-portal --configuration=development",
    "test:dev": "nx run-many --target=test --projects=api,institution-portal,government-portal",
    "lint:dev": "nx run-many --target=lint --projects=api,institution-portal,government-portal",
    "build:prod": "nx run-many --target=build --projects=api,institution-portal,government-portal --configuration=production",
    "start:prod:api": "node dist/apps/backend/api/main.js",
    "start:prod:institution": "serve -s dist/apps/frontend/institution-portal",
    "start:prod:government": "serve -s dist/apps/frontend/government-portal",
    "docker:build:prod": "docker-compose -f docker-compose.prod.yml build",
    "docker:up:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "deploy:prod": "yarn build:prod && yarn docker:build:prod && yarn docker:up:prod"
  },
  "private": true,
  "dependencies": {
    "@nestjs/common": "^10.0.2",
    "@nestjs/core": "^10.0.2",
    "@nestjs/platform-express": "^10.0.2",
    "axios": "^1.6.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-router-dom": "6.11.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.2",
    "@nx/eslint": "20.0.7",
    "@nx/eslint-plugin": "20.0.7",
    "@nx/jest": "20.0.7",
    "@nx/js": "20.0.7",
    "@nx/nest": "^20.0.7",
    "@nx/node": "20.0.7",
    "@nx/react": "20.0.7",
    "@nx/vite": "20.0.7",
    "@nx/web": "20.0.7",
    "@nx/webpack": "20.0.7",
    "@nx/workspace": "20.0.7",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.3.12",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@testing-library/react": "15.0.6",
    "@types/jest": "^29.5.12",
    "@types/node": "18.16.9",
    "@types/react": "18.3.1",
    "@types/react-dom": "18.3.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.3.1",
    "autoprefixer": "10.4.13",
    "babel-jest": "^29.7.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.1",
    "eslint-plugin-react": "7.35.0",
    "eslint-plugin-react-hooks": "5.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jsdom": "~22.1.0",
    "nx": "20.0.7",
    "postcss": "8.4.38",
    "prettier": "^2.6.2",
    "tailwindcss": "3.4.3",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.5.2",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.3.1",
    "webpack-cli": "^5.1.4"
  }
}
